{
  "fields": [
    {
      "name": "channel",
      "title": "Sales Channel",
      "width": 3,
      "type": "select",
      "values": [
        "Direct",
        "Agent",
        "Broker"
      ]
    },
    {
      "name": "multiple_drivers",
      "title": "Multiple Drivers",
      "width": 3,
      "newline": true,
      "type": "select",
      "values": [
        "No - Just Policyholder",
        "Yes - Other Drivers"
      ]
    },
    {
      "name": "drivers",
      "title": "Additional Drivers",
      "optional": true,
      "type": "group",
      "fields": [
        {
          "name": "driver_firstname",
          "title": "Driver - First Name",
          "width": 3,
          "type": "string",
